            </transformation>

            <materials>
                <material id="bars" />
            </materials>

            <texture id="red" length_s="1.0" length_t="1.0" />

            <children>
                <componentref id="goal" />
            </children>
        </component>
    
        <component id="topTorus" >
            <transformation>
                <translate x="0.0" y="6.0" z="0.0" />  
                <scale x="2.5" y="2.0" z="3.5" />
                <rotate axis="x" angle="90" />          
            </transformation>

            <materials>
                <material id="field" />
            </materials>

            <texture id="blue" length_s="10.0" length_t="10.0" />

            <children>
                <primitiveref id="torus" />
            </children>
        </component>

        <component id="bottomTorus" >
