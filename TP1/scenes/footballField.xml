                <scale x="1.0" y="1.0" z="1.0" />
            </transformation>

            <materials>
                <material id="white" />
            </materials>

            <texture id="topTexTorus" length_s="1.0" length_t="1.0" />

            <children>
                <componentref id="arc1" />
                <componentref id="arc2" />
                <componentref id="arc3" />
                <componentref id="arc4" />
            </children>
        </component>  

        <component id="arc1">
            <transformation> 
                <rotate axis="y" angle="-45" />           
                <translate x="0.0" y="0.0" z="-18.0" />
                <rotate axis="x" angle="-45" />
