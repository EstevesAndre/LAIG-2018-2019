            <diffuse r="0.5" g="0.5" b="0.5" a="1.0" />
            <specular r="0.5" g="1.0" b="0.5" a="1.0" />
        </spot>

        <spot id="leftCorner2" enabled="1" angle="10" exponent="2.0">            
            <location x="6.0" y="8.0" z="-10.0" w="1.0" />
