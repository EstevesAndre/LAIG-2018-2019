            </children>
        </component>

        <component id="goalUpBarLeft">
            <transformation>
                <translate x="-1.5" y="1.5" z="-1.0" />
                <rotate axis="x" angle="-17" />             
                <scale x="0.17" y="0.17" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>
        
        <component id="goalUpBarRight">
            <transformation>
                <translate x="1.5" y="1.5" z="-1.0" />
                <rotate axis="x" angle="-17" />             
                <scale x="0.17" y="0.17" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>
        <!-- END GOAL DEFINITION -->

        <component id="goalLeft">
            <transformation>
                <translate x="0.0" y="0.0" z="-9.0" />
            </transformation>

            <materials>
                <material id="bars" />
            </materials>

            <texture id="blue" length_s="1.0" length_t="1.0" />

            <children>
                <componentref id="goal" />
            </children>
        </component>

        <component id="goalRight">
            <transformation>
                <translate x="0.0" y="0.0" z="9.0" />
