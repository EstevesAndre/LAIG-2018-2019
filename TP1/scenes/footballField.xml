            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalFront" />
            </children>
        </component>

        <component id="goalBack_groundLeft">
            <transformation>
                <translate x="-1.5" y="0.0" z="-1.0" />
                <scale x="0.2" y="0.2" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>
        
        <component id="goalBack_groundRight">
            <transformation>
                <translate x="1.5" y="0.0" z="-1.0" />
                <scale x="0.2" y="0.2" z="1.0" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>

        <component id="goalBack_groundBack">
            <transformation>
                <translate x="-1.5" y="0.0" z="-1.0" />
                <rotate axis="y" angle="90" />
