        <spot id="rightCorner2" enabled="1" angle="10" exponent="2.0">            
            <location x="6.0" y="8.0" z="10.0" w="1.0" />            
            <target x="0.0" y="0.0" z="0.0" />
            <ambient r="0.5" g="0.5" b="1.0" a="1.0" />
            <diffuse r="0.5" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
        </spot>

        <omni id="center" enabled="1">            
            <location x="0.0" y="8.0" z="0.0" w="1.0" />
            <ambient r="0.5" g="1.0" b="1.0" a="1.0" />
            <diffuse r="0.5" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="0.5" b="0.5" a="1.0" />
