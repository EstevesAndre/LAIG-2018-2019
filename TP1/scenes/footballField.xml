        <component id="cornerRight1">
            <transformation>
                <translate x="6.8" y="0.0" z="-10.5"/>
            </transformation>
            
            <materials>
                <material id="white" />
            </materials>

            <texture id="flag" length_s="1.0" length_t="1.0" />

            <children> 
                <componentref id="flag" />
                <componentref id="flagReverse" />
                <componentref id="stick" />
            </children>
        </component>

        <component id="cornerRight2">
            <transformation>
                <translate x="-6.8" y="0.0" z="-10.5"/>
            </transformation>
            
            <materials>
                <material id="white" />
            </materials>

            <texture id="flag" length_s="1.0" length_t="1.0" />

            <children> 
                <componentref id="flag" />
                <componentref id="flagReverse" />
                <componentref id="stick" />
            </children>
        </component>

        <component id="cornerLeft1">
            <transformation>
                <translate x="6.8" y="0.0" z="10.5"/>
            </transformation>
            
            <materials>
                <material id="white" />
            </materials>

            <texture id="flag" length_s="1.0" length_t="1.0" />

            <children> 
                <componentref id="flag" />
                <componentref id="flagReverse" />
                <componentref id="stick" />
            </children>
        </component>

        <component id="cornerLeft2">
            <transformation>
                <translate x="-6.8" y="0.0" z="10.5"/>
            </transformation>
            
            <materials>
                <material id="white" />
            </materials>

            <texture id="flag" length_s="1.0" length_t="1.0" />

            <children> 
                <componentref id="flag" />
                <componentref id="flagReverse" />
                <componentref id="stick" />
            </children>
        </component>


        <component id="flag">
            <transformation>
                <translate x="0.0" y="1.0" z="0.0"/>
                <scale x="0.1" y="0.1" z="0.1" />
                <rotate axis="z" angle="-90" />
            </transformation>
            
            <materials>
                <material id="white" />
            </materials>

            <texture id="flag" length_s="1.0" length_t="1.0" />

            <children> 
