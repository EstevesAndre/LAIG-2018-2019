            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>
        
        <component id="goalBack_VerticalLeft">
            <transformation>
                <translate x="-1.5" y="0.0" z="-1.0" />
                <rotate axis="x" angle="-90" />
                <scale x="0.17" y="0.17" z="1.5" />
            </transformation>

