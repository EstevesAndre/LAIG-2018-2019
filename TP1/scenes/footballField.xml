            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="arc" />
            </children>
        </component>  

         <component id="arc2">
            <transformation> 
                <rotate axis="y" angle="45" />           
                <translate x="0.0" y="0.0" z="-18.0" />
