            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1.0" length_t="1.0" />

            <children>
                <primitiveref id="goalBack" />
            </children>
        </component>
        
        <component id="goalBack_TopBack">
            <transformation>
                <translate x="0.0" y="1.5" z="0.0" />                
