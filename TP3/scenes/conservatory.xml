    <textures>
        <texture id="floor" file="images/floor_bw.jpg" />
        <texture id="wallpaper" file="images/whitewall.jpg" />
        <texture id="ceiling" file="images/glass.jpg" />
        <texture id="door" file="images/darkdoor.png" />
        <texture id="window" file="images/window.jpg" />
