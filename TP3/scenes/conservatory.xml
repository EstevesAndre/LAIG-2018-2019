        <primitive id="door">
            <rectangle x1="-2.0" y1="0" x2="2.0" y2="5.0"/>
        </primitive>

        <primitive id="lamp_ceiling">
            <cylinder2 base="1.0" top="0.5" height="1.0" slices="12" stacks="12"/>
        </primitive>

        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5"/>
        </primitive>

        <primitive id="table_leg">
            <cylinder base="0.25" top="0.25" height="2.0" slices="12" stacks="12"/>
        </primitive>

        <primitive id="board">
            <board npartsX="6.0" npartsY="6.0" textureP1="marble" textureP2="darkmarble" textureSelected="pinkmarble" texturePiece1="redmarble" texturePiece2="bluemarble"/>
